<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Custom Logger Handler configuration -->
    <type name="Shinesoftware\Ghostlogin\Model\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <!-- Custom logger configuration -->
    <type name="Shinesoftware\Ghostlogin\Model\Logger\Shinelogger">
        <arguments>
            <argument name="name" xsi:type="string">shinelogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Shinesoftware\Licenses\Model\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
